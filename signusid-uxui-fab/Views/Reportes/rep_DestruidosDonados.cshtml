@{
    ViewData["Title"] = "Activos Destruidos Donados Reporte - Apps";
}

@using System.Data
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte de Activos por Departamento</title>
    <style>
        /* Estilos para el contenedor de carga */
        #loadingOverlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); 
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        #loadingIcon {
            color: white;
            font-size: 2rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h4 class="mb-4">Reporte de Activos Destruidos  o Donados</h4>

        <form method="get" asp-action="rep_PorDepartamento" class="mb-4">
            <div class="row g-3">
                <!-- Input de Placa -->
                <div class="col-lg-6 col-md-6 col-12">
                    <label for="placa" class="form-label fw-bold">Placa</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-car-front"></i> <!-- Ícono de Bootstrap Icons -->
                        </span>
                        <input type="text" name="placa" id="placa" class="form-control" placeholder="Ingrese la placa..." value="@ViewBag.SelectedPlaca">

                    </div>
                </div>
                <!-- Selección de Estado -->
                <div class="col-lg-6 col-md-6 col-12">
                    <label for="estado" class="form-label fw-bold">Estado</label>
                    <select id="estado" name="estado" class="form-select">
                        <option value="">Todos</option>
                        @if (ViewBag.EstadosList != null)
                        {
                            foreach (var estado in ViewBag.EstadosList)
                            {
                                var isSelected = ViewBag.SelectedEstado != null &&
                                ViewBag.SelectedEstado.ToString() == estado.AssetStatusSysId.ToString();
                                <option value="@estado.AssetStatusSysId" selected="@(isSelected ? "selected" : null)">
                                    @estado.DisplayName
                                </option>
                            }
                        }
                    </select>
                </div>


             

                <!-- Botón de Filtrar -->
                <div class="col-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-lg px-4" style="max-width: 200px; width: 100%;">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </div>
            </div>
        </form>




        <div class="table-responsive">
            @if (Model != null && Model.Rows.Count > 0)
            {
                <table id="activosTable" class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            @foreach (DataColumn col in Model.Columns)
                            {
                                <th>
                                    @switch (col.ColumnName)
                                    {
                                        case "AssetItemNumber":
                                            @("Número Activo")
                                            break;
                                        case "placa":
                                            @("Placa")
                                            break;
                                        case "shortDescription":
                                            @("Activo")
                                            break;
                                        case "Nombre":
                                            @("Departamento")
                                            break;
                                        default:

                                            break;
                                    }
                                </th>

                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                @foreach (var item in row.ItemArray)
                                {
                                    <td>@item</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center text-muted">No hay activos disponibles.</p>
            }





        </div>
        <!-- Paginación -->
        <nav aria-label="Page navigation">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center">
                <!-- Información de la página actual -->
                <div class="pagination-info mb-2 mb-sm-0">
                    <span>Página @ViewBag.CurrentPage de @ViewBag.TotalPages</span>
                </div>

                <!-- Paginación -->
                <ul class="pagination flex-wrap justify-content-center justify-content-sm-end">
                    <!-- Ir a la primera página -->
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("rep_PorDepartamento", new { status = ViewBag.SelectedStatus, category = ViewBag.SelectedCategory, page = 1 })" aria-label="First">
                                <span aria-hidden="true">&laquo;&laquo;</span>
                            </a>
                        </li>
                    }

                    <!-- Ir a la página anterior -->
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("rep_PorDepartamento", new { status = ViewBag.SelectedStatus, category = ViewBag.SelectedCategory, page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }

                    <!-- Mostrar números de páginas -->
                    @for (var i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        @if (i == 1 || i == ViewBag.TotalPages || (i >= ViewBag.CurrentPage - 2 && i <= ViewBag.CurrentPage + 2))
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("rep_PorDepartamento", new { status = ViewBag.SelectedStatus, category = ViewBag.SelectedCategory, page = i })">@i</a>
                            </li>
                        }

                        @if (i == ViewBag.CurrentPage + 2 && ViewBag.CurrentPage + 2 < ViewBag.TotalPages)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }

                    <!-- Ir a la página siguiente -->
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("rep_PorDepartamento", new { status = ViewBag.SelectedStatus, category = ViewBag.SelectedCategory, page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }

                    <!-- Ir a la última página -->
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("rep_PorDepartamento", new { status = ViewBag.SelectedStatus, category = ViewBag.SelectedCategory, page = ViewBag.TotalPages })" aria-label="Last">
                                <span aria-hidden="true">&raquo;&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <form id="exportFormDept" asp-action="ExportarExcelActivosPorDepartamento" method="get" style="margin-bottom: 20px; margin-top: 20px;">
            <input type="hidden" id="selectedPlaca" name="placa" value="" />
            <input type="hidden" id="selectedDepartamento" name="departamento" value="" />
            <button type="submit" class="btn btn-success">
                <i class="fas fa-file-excel"></i> Exportar a Excel
            </button>
        </form>

        <script>
            document.getElementById('exportFormDept').addEventListener('submit', function() {
                // Capturar los valores seleccionados en la vista
                var selectedPlaca = document.getElementById('placa') ? document.getElementById('placa').value : "";
                var selectedDepartamento = document.getElementById('departamento') ? document.getElementById('departamento').value : "";

                // Asignar los valores a los campos ocultos
                document.getElementById('selectedPlaca').value = selectedPlaca;
                document.getElementById('selectedDepartamento').value = selectedDepartamento;
            });
        </script>





        <!-- Contenedor de carga -->
        <div id="loadingOverlay">
            <div id="loadingIcon">
                <i class="fas fa-spinner fa-spin"></i> Cargando...
            </div>
        </div>

        <script>
            // document.getElementById('exportFormDept').addEventListener('submit', function() {
            //     // Mostrar el ícono de carga
            //     document.getElementById('loadingOverlay').style.display = 'flex';
            // });

            // Ocultar el ícono de carga cuando la página se recarga o se redirige
            window.addEventListener('load', function() {
                document.getElementById('loadingOverlay').style.display = 'none';
            });
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function () {
                $('.table').DataTable();
            });
        </script>
</body>
</html>
