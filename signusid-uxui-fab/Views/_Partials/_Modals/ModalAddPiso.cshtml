```html
<!-- Add Pisos Modal:
En este form se el ingreso y edición de edificios.
-->
<div class="modal fade" id="addPisoModal" data-context="new" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-simple modal-dialog-centered modal-add-new-role">
        <div class="modal-content">
            <div class="modal-body" style="padding: 0 !important; margin-top: -20px; margin-bottom:-10px;">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="margin-top: 15px;"></button>
                <div class="text-center mb-6">
                    <h4 class="role-title mb-2" style="margin-top: 15px">Agregar @ViewBag.NombreUbicacionB</h4>
                </div>

                <form id="addPisoForm" class="row g-1" asp-action="InsertarPiso" asp-controller="Empresa" method="post" style="row-gap: 4px; margin-bottom: 0;">
                    <!-- Seleccionar empresa -->
                    <div class="col-12" style="margin-bottom: 4px;">
                        <label class="form-label" for="companySelect" style="margin-bottom: 2px;">Nombre @ViewBag.NombreUbicacionA</label>
                        <select id="companySelect" name="companySysId" class="form-select" required style="background-color:#C6C6C6">
                            <option value="">Cargando empresas...</option>
                        </select>
                    </div>

                    <div class="col-12" style="margin-bottom: 4px;">
                        <label class="form-label" for="name" style="margin-bottom: 2px;">Nombre @ViewBag.NombreUbicacionB</label>
                        <input type="text"
                               id="name"
                               name="name"
                               class="form-control input2"
                               placeholder="Ingrese el nombre del piso"
                               required />
                        <div id="stateNameError" class="error-message2"></div>
                    </div>

                    <div class="col-12" style="margin-bottom: 4px;">
                        <label class="form-label" for="description" style="margin-bottom: 2px;">Descripción</label>
                        <textarea id="description"
                                  name="description"
                                  class="form-control input2"
                                  placeholder="Ingrese una breve descripción del piso"
                                  rows="4"
                                  required
                                  style="height: 70px; resize: none;"></textarea>
                        <div id="stateDescriptionError" class="error-message2"></div>
                    </div>

                    <div id="addingNamesError" class="error-message3"></div>

                    <div class="col-12 d-flex justify-content-center gap-2 mt-0" style="margin-bottom: 0;">
                        <button type="submit" class="btn btn-primary" id="saveStateButton" style="margin-top:-10px; margin-bottom: 10px">
                            Guardar
                        </button>
                        <button type="button" class="btn btn-secondary" id="cancelButton" style="margin-top:-10px; margin-bottom: 10px" data-bs-dismiss="modal">
                            Cancelar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- #region Estilos CSS -->
<style>
    .error-message2 {
        color: red;
        font-size: 0.875rem;
        margin-top: 5px;
    }

    .error-message3 {
        color: red;
        font-size: 0.875rem;
        text-align: center;
        margin-top: 5px;
    }

    .input2 {
        margin-bottom: 10px;
    }

    .button2 {
        margin-top: 10px;
    }
</style>
<!-- #endregion -->

<script>
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.getElementById("addPisoForm");
      const cancelButton = document.getElementById("cancelButton");
      const modal = document.getElementById("addPisoModal");
      const nameInput = document.getElementById("name");
      const descriptionInput = document.getElementById("description");
      const companySelect = document.getElementById("companySelect");

      const nameErrorDiv = document.getElementById("stateNameError");
      const descriptionErrorDiv = document.getElementById("stateDescriptionError");
      const companyErrorDiv = document.createElement("div");
      companyErrorDiv.classList.add("error-message2");
      companySelect.parentNode.appendChild(companyErrorDiv);

      function resetForm() {
        form.reset();
        nameErrorDiv.textContent = "";
        descriptionErrorDiv.textContent = "";
        companyErrorDiv.textContent = "";
        const addingErr = document.getElementById("addingNamesError");
        if (addingErr) addingErr.textContent = "";
      }

      // Limpia al cerrar modal
      modal.addEventListener("hidden.bs.modal", resetForm);

      // Botón cancelar
      cancelButton.addEventListener("click", function () {
        resetForm();
        const bsModal = bootstrap.Modal.getInstance(modal);
        if (bsModal) bsModal.hide();
      });

      // Validación
      form.addEventListener("submit", function (e) {
        e.preventDefault();

        const nameValue = nameInput.value.trim();
        const descriptionValue = descriptionInput.value.trim();
        const companyValue = companySelect.value;

        nameErrorDiv.textContent = "";
        descriptionErrorDiv.textContent = "";
        companyErrorDiv.textContent = "";

        let isValid = true;

        if (!nameValue || nameValue.length < 3 || nameValue.length > 50) {
          nameErrorDiv.textContent = "El nombre debe tener entre 3 y 50 caracteres.";
          isValid = false;
        }

        if (!descriptionValue || descriptionValue.length < 3 || descriptionValue.length > 150) {
          descriptionErrorDiv.textContent = "La descripción debe tener entre 3 y 150 caracteres.";
          isValid = false;
        }

        if (!companyValue || companyValue === "") {
          companyErrorDiv.textContent = "Debe seleccionar una empresa válida.";
          isValid = false;
        }

        if (isValid) {
          form.submit();
        }
      });

      // Limpieza de errores al interactuar
      nameInput.addEventListener("input", () => nameErrorDiv.textContent = "");
      descriptionInput.addEventListener("input", () => descriptionErrorDiv.textContent = "");
      companySelect.addEventListener("change", () => companyErrorDiv.textContent = "");
    });
</script>
